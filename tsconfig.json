{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@data-models": [
        "libs/data-models/src/index.ts"
      ],
      "@services": [
        "libs/services/src/index.ts"
      ],
      "@appNgrx": [
        "src/ngrx/index.ts"
      ],
      "@enums": [
        "libs/enums/src/index.ts"
      ]
      // "enums": [
      //   "dist/enums"
      // ],
      // "enums/*": [
      //   "dist/enums/*"
      // ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}